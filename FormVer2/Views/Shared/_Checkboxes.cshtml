@using FormVer2.Models.BL.PreviewBL
@model PreviewComponentDTO

<div style="border: 2px solid black;" class="mt-1">
    <p>@Model.Alias</p>
    <div class="list-group w-50">
        @{
            for (int i = 0; i < Model.ListItem.Count(); i++)
            {
                <label class="list-group-item">
                    <input type="checkbox" class="form-check-input me-1" name="hobbies"> @Model.ListItem[i].Alias
                </label>
            }
        }
    </div>
</div>