@using FormVer2.Models.BL.FormComponentBL
@model FormComponentDTO
@{
    ViewData["Title"] = "Form's component details";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateFormComponent">
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FormId" class="control-label"></label>
                <input asp-for="FormId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ComponentId" class="control-label"></label>
                <input asp-for="ComponentId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IsRequired" class="control-label"></label>
                <input asp-for="IsRequired" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save changes" class="btn btn-primary" />
                <a asp-controller="FormComponent" asp-action="IndexFormComponent" asp-route-formId="@Model.FormId" class="btn btn-success">Cancel</a>
            </div>
        </form>
    </div>
</div>