@using FormVer2.Models.BL.FormComponentBL

@model ViewListFormComponentDTO

@{
    ViewData["Title"] = "Form's Component";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Components</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Form" asp-action="IndexForm">Form</a></li>
                    <li class="breadcrumb-item active">Component</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><a asp-action="CreateFormComponent" asp-route-formId="@Model.FormId" type="button" class="btn btn-primary float-right"><i class="fas fa-plus"></i> Components</a></h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 20%;">
                            Component
                        </th>
                        <th style="width: 33%;">
                            TextPrompt
                        </th>
                        <th style="width: 8%;">
                            Require
                        </th>
                        <th style="width: 6%;">
                            Order
                        </th>
                        <th style="width: 33%;">
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model.ListFormComponent)
                {
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FormComponent.ComponentId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FormComponent.TextPrompt)
                            </td>
                            <td>
                                @{ if (item.FormComponent.IsRequired)
                                    {
                                        <div class="icheck-primary d-inline">
                                            <input type="checkbox" id="checkboxPrimary1" checked disabled>
                                            <label for="checkboxPrimary1">
                                            </label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="icheck-primary d-inline">
                                            <input type="checkbox" id="checkboxPrimary1" disabled>
                                            <label for="checkboxPrimary1">
                                            </label>
                                        </div>
                                    }
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FormComponent.DisplayOrder)
                            </td>
                            <td class="project-actions text-right">
                                <a asp-controller="Item" asp-action="IndexItem" asp-route-formId="@Model.FormId" asp-route-componentId="@item.FormComponent.ComponentId" asp-route-displayorder="@item.FormComponent.DisplayOrder" class="btn btn-primary btn-sm">
                                    <i class="fas fa-folder">
                                    </i>
                                    Items (@item.NumOfItem)
                                </a>
                                <a class="btn btn-info btn-sm" asp-route-id="@item.FormComponent.Id" asp-action="UpdateFormComponent">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm" asp-route-id="@item.FormComponent.Id" asp-action="DeleteFormComponent">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->